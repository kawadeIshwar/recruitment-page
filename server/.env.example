# Server Configuration
PORT=4000
NODE_ENV=production

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/recruitment-db?retryWrites=true&w=majority

# CORS Origins (Frontend URL - NO trailing slash)
CORS_ORIGINS=https://recruitment-alabty.netlify.app

# Client URL (Frontend URL for email links)
CLIENT_URL=https://recruitment-alabty.netlify.app

# JWT Authentication
JWT_SECRET=your-random-secret-key-minimum-32-characters-here
JWT_EXPIRES_IN=1d

# QuickeKYC API Configuration
KYC_BASE_URL=https://api.quickekyc.com/api/v1
KYC_API_KEY=your-quickekyc-api-key-here
KYC_DEBUG=false

# Email/SMTP Configuration (CloudExter/Alabty)
SMTP_HOST=mail.alabty.com
SMTP_PORT=465
SMTP_USER=no_reply@alabty.com
SMTP_PASS=your-smtp-password-here
SMTP_FROM=no_reply@alabty.com
